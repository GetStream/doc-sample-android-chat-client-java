<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/testMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".MainActivity"
        tools:visibility="visible">

        <Button
            android:id="@+id/channelQueryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channel query" />

        <Button
            android:id="@+id/channelWatchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch channel" />

        <Button
            android:id="@+id/channelStopWatchingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop watching channel" />

        <Button
            android:id="@+id/channelSendMessageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message to channel" />

        <Button
            android:id="@+id/channelShowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show channel" />

        <Button
            android:id="@+id/channelHideBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hide channel" />

        <Button
            android:id="@+id/channelMessageMarkReadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as read" />

        <Button
            android:id="@+id/channelAcceptInviteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept channel Invite" />

        <Button
            android:id="@+id/channelRejectInviteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject channel Invite" />

        <Button
            android:id="@+id/channelUpdateMsgBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update channel message" />

        <Button
            android:id="@+id/channelRemoveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channel remove" />

        <Button
            android:id="@+id/getUsersBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get users" />

        <Button
            android:id="@+id/userAddMemberBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add member" />

        <Button
            android:id="@+id/userRemoveMemberBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove member" />

        <Button
            android:id="@+id/userMuteUserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mute user" />

        <Button
            android:id="@+id/userUnMuteUserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un Mute user" />

        <Button
            android:id="@+id/userBanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ban user" />

        <Button
            android:id="@+id/userUnBanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ban unuser" />

        <Button
            android:id="@+id/messageSearchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search message" />

        <Button
            android:id="@+id/messageGetBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get message" />

        <Button
            android:id="@+id/messageUpdateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update message" />

        <Button
            android:id="@+id/messageSendActionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send action" />

        <Button
            android:id="@+id/messageGetRepliesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get replies" />

        <Button
            android:id="@+id/messageGetReactionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get reactions" />

        <Button
            android:id="@+id/messageDeleteReactionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete reactions" />

        <Button
            android:id="@+id/messageDeleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete message" />

    </LinearLayout>
</ScrollView>

